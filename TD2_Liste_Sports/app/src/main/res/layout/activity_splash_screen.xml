<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashscreen"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/Tv_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Size_Et_splash"
        android:text="@string/chargement"
        android:textSize="@dimen/textsize_splash"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTop_splash"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height_splash"
        android:layout_centerVertical="true"
        android:src="@drawable/splashscreen"
        android:layout_below="@id/Tv_splash"
        android:contentDescription="@string/desc_splash_screen" />

</RelativeLayout>